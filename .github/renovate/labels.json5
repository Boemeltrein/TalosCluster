{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      matchUpdateTypes: ["major"],
      addLabels: ["type/major"]
    },
    {
      matchUpdateTypes: ["minor"],
      addLabels: ["type/minor"]
    },
    {
      matchUpdateTypes: ["patch"],
      addLabels: ["type/patch"]
    },
    {
      matchUpdateTypes: ["digest"],
      addLabels: ["type/digest"]
    },
    {
      matchUpdateTypes: ["pin", "pinDigest"],
      addLabels: ["type/pin"]
    },
    {
      matchDatasources: ["github-runners"],
      addLabels: ["renovate/github-runners"]
    },
    {
      matchDatasources: ["github-releases", "github-tags"],
      addLabels: ["renovate/github-release"]
    },
    {
      matchDatasources: ["docker"],
      addLabels: ["renovate/container"]
    },
    {
      matchDatasources: ["helm"],
      addLabels: ["renovate/helm"]
    },
    {
      matchDatasources: ["kubernetes-api"],
      addLabels: ["renovate/kubernetes-api"]
    },
    {
      matchPackageNames: ["/siderolabs/"],
      addLabels: ["system-upgrade"]
    },
    {
      matchPackageNames: ["/fluxcd/"],
      addLabels: ["fluxcd-update"]
    },    
    {
      matchPackageNames: ["/longhorn/"],
      addLabels: ["longhorn-update"]
    },
    {
      matchPackageNames: ["/cilium/"],
      addLabels: ["cilium-update"]
    }
  ]
}
